{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User</h1>

    <section class="row">
        <article class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-center">
            <figure>
                <div class="user_pic" style="width: 200px; height: 200px; background: url({{ user.picture|default(asset('bundles/app/img/default-user.png')) }}); background-size:cover;border: solid 5px; border-radius: 100%; margin-left: auto;margin-right: auto; margin-bottom: 5%;"></div>
                <figcaption><h2>{{ user.name }}</h2></figcaption>
            </figure>

            <p>{{ user.birthday|date }}</p>

            {#<aside class="btn-group" role="group">#}
            {#<a class="btn btn-primary" href="{{ url('user_show', {'id': user.id} ) }}"><span class="glyphicon glyphicon-eye-open"></span> Show</a>#}
            {#<a class="btn btn-warning" href="{{ url('user_update', {'id': user.id} ) }}"><span class="glyphicon glyphicon-edit"></span> Edit</a>#}
            {#</aside>#}
        </article>
    </section>

    <ul class="record_actions">
        <li>
            <a href="{{ path('user') }}">
                Back to the list
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}