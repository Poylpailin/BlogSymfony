{% extends '::base.html.twig' %}

{% block body -%}
    <h2>Articles</h2>

    <section class="row">
        {% for article in articles %}

                <div class="text-center">
                    <h2><a href="{{ url('article_show', {'id': article.id} ) }}">{{ article.title }}</a></h2>
                    <p>{{ article.date|date("d/m/Y") }}</p>
                    <p>Categories : {% for category in article.categories %}
                            <a href="{{ path('category', {'name': category}) }}" class="btn btn-primary btn-xs">{{ category }}</a>
                        {% endfor %}</p>
                    <p>Tags : {% for tag in article.tags %}
                            <a href="{{ path('tag', {'name': tag}) }}" class="btn btn-primary btn-xs">{{ tag }}</a>
                        {% endfor %}</p>

            </div>
        {% endfor %}
    </section>
{% endblock %}